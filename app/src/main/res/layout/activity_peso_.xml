<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_pesoInicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="30dp"
        android:text="@string/tv_pesoInicial"
        android:textColor="#030303"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/tv_ingresarPeso"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="98dp"
        android:text="@string/tv_ingresarpeso"
        android:textColor="#F6CDE6"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_ingresarpesoactual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="375dp"
        android:text="@string/tv_ingresarpesoactual"
        android:textColor="#F6CDE6"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_pesoActual"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="429dp"
        android:ems="10"
        android:hint="@string/et_peso"
        android:background="#FFFFFF"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textSize="36sp" />

    <Button
        android:id="@+id/bRegistrarPeso"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="523dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="registrarpeso"
        android:text="@string/botonRegistrar"
        android:textColor="#E91E63"
        android:textSize="36sp"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/tv_pesoactual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="291dp"
        android:text="@string/tv_pesoActual"
        android:textColor="#030303"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/et_pesoInicial"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="192dp"
        android:ems="10"
        android:hint="@string/et_peso"
        android:background="#FFFFFF"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textSize="36sp" />
</RelativeLayout>